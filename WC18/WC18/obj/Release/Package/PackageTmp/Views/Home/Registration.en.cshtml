@model WC18.Models.Registration

@{
    ViewBag.Title = "Registration";
    ViewBag.Description = "WOOMB International Conference. Registration form and prices.";
}

<!-- Main -->
<article id="main">
    <header>
        <h2>Registration</h2>
        <p>Reserve your space in the International Conference, Costa Rica 2018.</p>
    </header>
    <section class="wrapper style5">
        <div class="inner">

            <section>
                <h4>Instructions</h4>
                <p>Complete the form below. <br/>You can select the events in which you want to participate. <br/>  Once the form is sent, we will provide you with the payment options.  The registration will be confirmed once the payment is received. There are no refunds for the payments and additional charges may apply according to payment type as per processing fees.</p>
                <hr />
            </section>
            <section>

                <h5>Detail of events</h5>
                <p>Below is the list of events and prices.</p>
                <div class="table-wrapper">
                    <table class="alt">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Conference</td>
                                <td>Presentations April 27<sup>th</sup> and 28<sup>th</sup>.</td>
                                <td>80 USD</td>
                            </tr>
                            <tr>
                                <td>Teacher Trainings</td>
                                <td>Basic/Upskilling Training Program or Extension Program. April 29<sup>th</sup>, 30<sup>th</sup>, May 1<sup>st</sup> and 2<sup>nd</sup>.</td>
                                <td>80 USD</td>
                            </tr>
                            <tr>
                                <td>Conference Dinner</td>
                                <td>Saturday April 28<sup>th</sup>.</td>
                                <td>30 USD</td>
                            </tr>
                            <tr>
                                <td>Lodging</td>
                                <td>Disabled temporaly due space, e-mail us for waiting list.</td>
                                <td>40 USD per day</td>
                            </tr>
                            <tr>
                                <td>Tour(optional)</td>
                                <td>This is a half-day tour.</td>
                                <td>75 USD</td>
                            </tr>
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>


                <p>If you register before january 31<sup>st</sup>, 2018 the following prices will apply.</p>
                <div class="table-wrapper">
                    <table class="alt">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Conference</td>
                                <td>Presentations April 27<sup>th</sup> and 28<sup>th</sup>.</td>
                                <td>60 USD</td>
                            </tr>
                            <tr>
                                <td>Teacher Trainings</td>
                                <td>Basic/Upskilling Training Program or Extension Program. April 29<sup>th</sup>, 30<sup>th</sup>, May 1<sup>st</sup> and 2<sup>nd</sup>.</td>
                                <td>60 USD</td>
                            </tr>
                            <tr>
                                <td>Conference Dinner</td>
                                <td>Saturday April 28<sup>th</sup>.</td>
                                <td>30 USD</td>
                            </tr>
                            <tr>
                                <td>Lodging</td>
                                <td>Disabled temporaly due space, e-mail us for waiting list.</td>
                                <td>40 USD per day</td>
                            </tr>
                            <tr>
                                <td>Tour(optional)</td>
                                <td>This is a half-day tour.</td>
                                <td>75 USD</td>
                            </tr>
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>

            </section>
            @{
                Html.RenderPartial("RegistrationFormPartial");
            }
        </div>
    </section>
</article>

@section scripts {
    <script src="~/Content/registration.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}