@model WC18.Models.Registration

@{
    ViewBag.Title = "";
}

<!-- Main -->
<article id="main">
    <header>
        <h2>Registration</h2>
        <p>Reserve your space in the International Conference, Costa Rica 2018.</p>
        <p>PAGE UNDER CONSTRUCTION</p>
    </header>
    <section class="wrapper style5">
        <div class="inner">

            <section>
                <h4>Instructions</h4>
                <p>This page is under construction, keep checking for updates.</p>
                <!--<p>Complete the form below. <br/>You can select the events which you want to participate. <br/>  Once the form is sent, we will provide you with the payment options.  The registration will be confirmed once the payment is received.</p>-->
                <hr />
            </section>
            <section>

                <h5>Detail of events</h5>
                <p>Below is the list of events and prices.</p>
                <div class="table-wrapper">
                    <table class="alt">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Conference</td>
                                <td>Presentations April 27<sup>th</sup> and 28<sup>th</sup>.</td>
                                <td>80 USD</td>
                            </tr>
                            <tr>
                                <td>Teacher Trainings</td>
                                <td>Basic Training Program or Extension Program. April 29<sup>th</sup>, 30<sup>th</sup>, May 1<sup>st</sup> and 2<sup>nd</sup>.</td>
                                <td>80 USD</td>
                            </tr>
                            <tr>
                                <td>Conference Dinner</td>
                                <td>Saturday April 28<sup>th</sup>.</td>
                                <td>30 USD</td>
                            </tr>
                            <tr>
                                <td>Lodging</td>
                                <td>Two options, same price.</td>
                                <td>40 USD per day</td>
                            </tr>
                            <tr>
                                <td>Tour(optional)</td>
                                <td>This is a half-day tour.</td>
                                <td>75 USD</td>
                            </tr>
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>


                <p>If you register before january 31<sup>st</sup>, 2018 the following prices will apply.</p>
                <div class="table-wrapper">
                    <table class="alt">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Conference</td>
                                <td>Presentations April 27<sup>th</sup> and 28<sup>th</sup>.</td>
                                <td>60 USD</td>
                            </tr>
                            <tr>
                                <td>Teacher Trainings</td>
                                <td>Basic Training Program or Extension Program. April 29<sup>th</sup>, 30<sup>th</sup>, May 1<sup>st</sup> and 2<sup>nd</sup>.</td>
                                <td>60 USD</td>
                            </tr>
                            <tr>
                                <td>Conference Dinner</td>
                                <td>Saturday April 28<sup>th</sup>.</td>
                                <td>30 USD</td>
                            </tr>
                            <tr>
                                <td>Lodging</td>
                                <td>Two options, same price.</td>
                                <td>40 USD per day</td>
                            </tr>
                            <tr>
                                <td>Tour(optional)</td>
                                <td>This is a half-day tour.</td>
                                <td>75 USD</td>
                            </tr>
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>

            </section>


            <section>
                <h4>Form</h4>
                <form method="post">
                    @Html.AntiForgeryToken()
                    @*@Html.ValidationSummary(false)*@
                    <div class="row uniform">
                        <div class=" 6u 12u$(medium)">
                            <div class="select-wrapper">
                                @Html.DropDownListFor(model => model.IdType,
                               new List<SelectListItem> {
                                   new SelectListItem() { Value = "", Text = "- ID Type -" },
                                   new SelectListItem() { Value = "1", Text = "Goverment ID" },
                                   new SelectListItem() { Value = "2", Text = "Passport" }
                               }, new { id = "form-tipoid" })
                                @*<select name="form-tipoid" id="form-tipoid">
                                        <option value="">- ID Type -</option>
                                        <option value="cedula">Goverment ID</option>
                                        <option value="pasaporte">Passport</option>
                                    </select>*@
                            </div>
                            @Html.ValidationMessageFor(model => model.IdType, "", new { @class = "val-error" })
                        </div>
                        <div class="6u 12u$(xsmall)">
                            @Html.TextBoxFor(model => model.IdNumber, new { id = "form-idnum", placeholder = "ID Number" })
                            @Html.ValidationMessageFor(model => model.IdNumber, "", new { @class = "val-error" })
                            @*<input type="text" name="form-idnum" id="form-idnum" value="" placeholder="ID Number" />*@
                        </div>
                        <div class="6u 12u$(xsmall)">
                            <input type="text" name="form-name" id="form-name" value="" placeholder="Name" />
                        </div>
                        <div class="6u 12u$(medium) 12u$(xsmall)">
                            <input type="email" name="form-email" id="form-email" value="" placeholder="Email" />
                        </div>
                        <div class="6u 12u$(xsmall)">
                            <input type="text" name="form-pais" id="form-pais" value="" placeholder="Country" />
                        </div>
                        <div class="6u 12u$(xsmall)">
                            <input type="text" name="form-tel" id="form-tel" value="" placeholder="Phone" />
                        </div>
                        <p>Are you a Billings teacher?</p>
                        <div class="4u 6u(small)">
                            <input type="radio" id="form-instructor-si" name="form-instructor" checked>
                            <label for="form-instructor-si">Yes</label>
                        </div>
                        <div class="4u$ 6u$(small)">
                            <input type="radio" id="form-instructor-no" name="form-instructor">
                            <label for="form-instructor-no">No</label>
                        </div>
                        <p>Do you use the Billings Ovulation Method&reg;?</p>
                        <div class="4u 6u(small)">
                            <input type="radio" id="form-usuario-si" name="form-usuario" checked>
                            <label for="form-usuario-si">Yes</label>
                        </div>
                        <div class="4u$ 6u$(small)">
                            <input type="radio" id="form-usuario-no" name="form-usuario">
                            <label for="form-usuario-no">No</label>
                        </div>
                        <p>Do you work in the Healthcare system?</p>
                        <div class="4u 6u(small)">
                            <input type="radio" id="form-salud-si" name="form-salud" checked>
                            <label for="form-salud-si">Yes</label>
                        </div>
                        <div class="4u$ 6u$(small)">
                            <input type="radio" id="form-salud-no" name="form-salud">
                            <label for="form-salud-no">No</label>
                        </div>
                        <div class="3u 12u$(small)">You register for:</div>
                        <div class="3u 12u$(small)">
                            <input type="checkbox" id="form-conferencia" name="form-conferencia">
                            <label for="form-conferencia">Conference</label>
                        </div>
                        <div class="3u 12u$(small)">
                            <input type="checkbox" id="form-entrenamientos" name="form-entrenamientos">
                            <label for="form-entrenamientos">Trainings (In the comments, indicate if basic or extension).</label>
                        </div>
                        <div class="3u$ 12u$(small)">
                            <input type="checkbox" id="form-cena" name="form-cena">
                            <label for="form-cena">Dinner</label>
                        </div>
                        <div class="3u 12u$(small)">
                        </div>
                        <div class="3u 12u$(small)">
                            <input type="checkbox" id="form-tour" name="form-tour">
                            <label for="form-tour">Half-day tour</label>
                        </div>
                        <div class="3u 12u$(small)">
                            <input type="checkbox" id="form-alojamiento" name="form-alojamiento">
                            <label for="form-alojamiento">Lodging (please enter number of nights)</label>
                        </div>
                        <div class="3u 12u$(small)">
                            <input type="text" id="form-dias" name="form-dias" size="2" maxlength="2" default="0">
                            <label for="form-dias">Lodging Nights</label>
                        </div>
                        <div class="3u$ 12u$(small)">
                        </div>
                        <div class="12u$">
                            <textarea name="form-comments" id="form-comments" placeholder="Comments" rows="6"></textarea>
                        </div>
                        <div class="12u$">
                            Price before January, 31<sup>st</sup>, 2018 <strong><span id="precioTemp">0</span> USD</strong>. Price after January, 31<sup>st</sup>, 2018 <strong><span id="precioTard">0</span> USD</strong>.
                        </div>
                        <!--<div class="12u$">
                            If you choose to use our lodging, you need to add 40 USD per night to the price above.<br /> Remember to indicate the number of days in the comments.
                        </div>-->
                        <div class="12u$">
                            <ul class="actions">
                                <li><input type="submit" value="Submit" class="special" /></li>
                                <li><input id="reset" type="reset" value="Reset" /></li>
                            </ul>
                        </div>
                    </div>
                </form>
            </section>

        </div>
    </section>
</article>

@section scripts {
    <script src="~/Content/registration.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}